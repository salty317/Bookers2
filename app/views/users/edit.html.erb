<div class="container">
  <h2>User info</h2>
  <%= form_for(@user) do |f| %>
    <div>
      <%= f.label :name, "Name" %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :profile_image, "Image" %>
      <%= f.attachment_field :profile_image %>
    </div>

    <div>
      <%= f.label :introduction, "Introduction" %>
      <%= f.text_area :introduction %>
    </div>

    <%= f.submit "Update User" %>
  <% end %>
</div>